<details {%- if params.id %} id="{{params.id}}"{% endif %} class="moduk-details {%- if params.classes %} {{ params.classes }}{% endif %}" data-module="moduk-details" {%- for attribute, value in params.attributes %} {{attribute}}="{{value}}"{% endfor %} {{- " open" if params.open }}>
  <summary class="moduk-details__summary">
    <span class="moduk-details__summary-text">
      {{ params.summaryHtml | safe if params.summaryHtml else params.summaryText }}
    </span>
  </summary>
  <div class="moduk-details__text">
    {{ caller() if caller else (params.html | safe if params.html else params.text) }}
  </div>
</details>
