{% extends "layout.njk" %}

{% block content %}
  <h1 class="moduk-heading-xl">
    MOD.UK Frontend
  </h1>

  <div class="moduk-grid-row">

    <div class="moduk-grid-column-one-third">
      <h2 class="moduk-heading-m">Components</h2>

      <ul class="moduk-list">
        <li><a href="/components/all{{ legacyQuery }}" class="moduk-link">All</a></li>
        {% for componentName in componentsDirectory | sort %}
          <li><a href="/components/{{ componentName }}{{ legacyQuery }}" class="moduk-link">{{ componentName | replace("-", " ") | capitalize }}</a></li>
        {% endfor %}
      </ul>
    </div>

    <div class="moduk-grid-column-one-third">
      <h2 class="moduk-heading-m">Examples</h2>

      <ul class="moduk-list">
      {% for exampleName in examplesDirectory | sort %}
        <li><a href="/examples/{{ exampleName }}{{ legacyQuery }}" class="moduk-link">{{ exampleName | replace("-", " ") | capitalize }}</a></li>
      {% endfor %}
      </ul>
    </div>

    <div class="moduk-grid-column-one-third">
      <h2 class="moduk-heading-m"><a href="/full-page-examples" class="moduk-link">Full page examples</a></h2>

      <ul class="moduk-list">
      {% for example in fullPageExamples %}
        <li><a href="/full-page-examples/{{ example.path }}{{ legacyQuery }}" class="moduk-link">{{ example.name | replace("-", " ") | capitalize }}</a></li>
      {% endfor %}
      </ul>

      <h2 class="moduk-heading-m">Sass Documentation</h2>

      <ul class="moduk-list">
        <li><a href="https://frontend.design-system.service.gov.uk/sass-api-reference/" class="moduk-link">Latest release</a></li>
        {% if not isDeployedToHeroku %}
        <li><a href="/docs" class="moduk-link">Local version</a></li>
        {% endif %}
      </ul>
    </div>
  </div>
{% endblock %}
